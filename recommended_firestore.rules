rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funções de Ajuda
    function isAuthenticated() { return request.auth != null; }
    function isOwner(userId) { return request.auth.uid == userId; }
    function isAdmin() { return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'; }

    // Users
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isAdmin();
    }

    // Projects (O erro atual é aqui)
    match /projects/{projectId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin(); // Ou ajustar conforme necessidade
    }

    // FAST Collection (Onde estava o erro anterior)
    match /fasts/{fastId} {
      allow read: if isAuthenticated();
      // PERMITINDO PARA QUALQUER USUÁRIO LOGADO (Modo Teste/Correção)
      allow create, update: if isAuthenticated(); 
      allow delete: if isAdmin();
    }
    
    // Outras Coleções Auxiliares
    match /contractors/{document=**} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /areas/{document=**} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /fast_categories/{document=**} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /fast_origins/{document=**} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    match /fast_managers/{document=**} { allow read: if isAuthenticated(); allow write: if isAdmin(); }
    
    match /{document=**} { allow read, write: if false; }
  }
}
